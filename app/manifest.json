{
  "name": "jsPsychHardware",
  "version": "0.1",
  "manifest_version":2,
  "description": "Allows jspsych to access hardware",
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "permissions": [
  	"activeTab",
  	"nativeMessaging"
  ],
  "page_action": {
    "default_title": "",
    "default_popup": "popup.html"
  },
  "content_scripts":[
  	{
  		"matches":["<all_urls>"],
  		"js": ["jquery.js", "detectjspsych.js"]
  	}
  ]
}
